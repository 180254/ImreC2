table(class="table table-striped padding-top")
    tr
        td(class="col-xs-2 middle") Storage ID
        td
            a(href=url class="breakable" id="storage-id")=id

    tr
        td(class="col-xs-2 middle") Parent ID
        td
            if parentUrl !== null
                a(href=parentUrl class="breakable")=parentId
            unless parentUrl !== null
                span(class="breakable")="n/a"

    tr
        td(class="col-xs-1 middle") Task
        td(id="info-comm-task")="(loading)"
    tr
        td(class="col-xs-1 middle") Done
        td(id="info-comm-percent")="(loading)"
