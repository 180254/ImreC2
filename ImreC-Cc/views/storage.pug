extends layout.pug

block content
    h3='Storage ' + ID

    form
    table(class="table table-striped")
        each file in Files
            tr
                td(class="col-xs-1")
                    input(type="checkbox")
                td(class="col-xs-1")
                    img(src=file.URL, class="thumb" alt="(thumb)")
                td(class="col-xs-11")
                    a(href=file.URL)=file.Name
